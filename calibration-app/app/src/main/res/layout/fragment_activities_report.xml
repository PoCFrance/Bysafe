<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="0.5"
                android:src="@drawable/gray_background_rounded" />

            <ImageView
                android:layout_width="10000dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@color/bg_clock_handwash"
                android:paddingBottom="50dp"
                android:src="@drawable/half_circle_clock" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_barrier_gesture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Rapport sur la journÃ©e"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_barrier_gesture"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/log_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#000000"
                android:gravity="center"
                android:orientation="vertical" />
        </ScrollView>

        <ImageButton
            android:id="@+id/go_to_activities"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/ic_arrow_back"
            app:iconTint="@color/colorSecondary" />


    </RelativeLayout>

</LinearLayout>